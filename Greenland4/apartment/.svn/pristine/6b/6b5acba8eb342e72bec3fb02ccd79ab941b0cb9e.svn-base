.login {
    width: 100%;
    height: 100%;
    background-image: url('./../../images/background.png');
    background-size: cover;
    background-position: center;
    position: relative;
    .logo {
        display: block;
        width: 160px;
        height: 50px;
        position: relative;
        left: 50px;
        top: 50px;
        background: url('./../../images/aden_logo.png') no-repeat;
    }
    &-con {
        width: 350px;
        height: 370px;
        background: #ffffff;
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translateY(-50%) translateX(-50%);
        .title {
            font-size: 22px;
            color: #808DAB;
            position: relative;
            top: 33px;
            left: 46px;
        }
        .form-con {
            position: relative;
            margin-top: 50px;
            left: 46px;
            .username,
            .password {
                background-color: #ffffff;
                outline: none;
                border: none;
                border-bottom: 1px solid #9B9B9B;
                width: 77%;
                text-indent: 50px;
                font-size: 16px;
                color: rgba(155, 155, 155, 0.55);
            }
            input::-webkit-input-placeholder {
                color: rgba(155, 155, 155, 0.55);
            }
            .username {
                background: url("./../../images/sign_in_account.png") no-repeat scroll 10px center transparent !important;
            }
            .password {
                background: url("./../../images/password.png") no-repeat scroll 10px center transparent !important;
            }
            .isRememberPassword {
                position: relative;
                left: 10px;
                width: 12px;
                height: 12px;
                appearance: none;
                -moz-appearance: none;
                -webkit-appearance: none;
                background: url("./../../images/remember_me.png") no-repeat center;
                outline: none;
            }
            .rememberPassword {
                position: relative;
                left: 10px;
                width: 12px;
                height: 12px;
                appearance: none;
                -moz-appearance: none;
                -webkit-appearance: none;
                background: url("./../../images/remember_me_select.png")no-repeat center;
                outline: none;
            }
            .rememberme {
                position: relative;
                left: 21px;
                font-size: 12px;
                color: #4FC2B8;
            }
            .forgotpassword {
                position: relative;
                left: 64px;
                font-size: 12px;
                color: #4FC2B8;
                a {
                    color: #4FC2B8;
                }
            }
            .submit {
                border: none;
                outline: none;
                width: 108px;
                height: 26px;
                line-height: 26px;
                font-size: 16px;
                color: #FFFFFF;
                background: #808DAB;
                border-radius: 5px;
                position: relative;
                left: 77px;
                top: 50px;
            }
            .submit:hover {
                cursor: pointer;
            }
        }
    }
}