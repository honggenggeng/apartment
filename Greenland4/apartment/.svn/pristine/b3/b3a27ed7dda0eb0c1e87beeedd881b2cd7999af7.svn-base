          key: "userName"
        },
        {
          title: "工单生成时间",
          key: "createTime"
        },
        {
          title: "状态",
          key: "isEnable"
        }
      ],
      data: []
    };
  },
  created() {
    this.getformatdata({startPage:1,pageSize:10})
    siteSpinner().then(res => {
      this.siteList = res.data.data;
    });
  },
  computed: {},
  methods: {
    search() {
      let searchData = {
        pageSize: 10,
        startPage: 1,
        startDate: this.startDate,
        endDate: this.endDate
      };
      if (this.searchType == "isEnable") {
        searchData.isEnable = this.selectValue;
      } else if(this.searchType == "priority") {
        searchData.priority = this.selectValue;
      }else if(this.searchType == "workPlanType") {
        searchData.workPlanType = this.selectValue;
      }else{
        searchData[this.searchType] = this.searchValue;
      }
      if (this.endDate != "" && this.startDate != "") {
        if (this.endDate >= this.startDate) {
          this.getformatdata(searchData);
        } else {
          this.$Message.info("结束时间应大于开始时间");
          this.endDate = "";
        }
      } else {
        this.getformatdata(searchData);
      }
    },
    searchTypeChange(value){
      
        this.selectValue = 0
      if(value == "priority"){
        this.selectList = [{value:0,name:"低"},{value:1,name:"中"},{value:2,name:"高"}]
        this.showInput = false
        this.showSelectList = true
      }else if(value == "isEnable"){
        this.selectList = [{value:0,name:"启用"},{value:1,name:"禁用"}]
        this.showInput = false
        this.showSelectList = true
      }else if(value == "workPlanType"){
        this.selectList = [{value:0,name:"巡检"},{value:1,name:"交接班"},{value:2,name:"审计"}]
        this.showInput = false
        this.showSelectList = true
      }else{
        this.showInput = true
        this.showSelectList = false
      }
    },
    siteChange(value) {
      userSpinner({siteUuids:this.formValidate.siteUuid}).then(res=>{
        this.receiveList = res.data.data
      })
      if(this.formValidate.siteUuid != ""){
        if(this.formValidate.workPlanType==0){
          lineSpinner(this.formValidate.siteUuid).then(res=>{
            this.routeList = res.data.data
          })
        }else if(this.formValidate.workPlanType==1){
          shiftSpinner(this.formValidate.siteUuid).then(res=>{
            this.shiftList = res.data.data
          })
        }else{
          auditSpinner(this.formValidate.siteUuid).then(res=>{
            this.auditList = res.data.data
          })
        }
      }
    },
    add() {
      this.formValidate = {
            isEnable: 0,
            siteUuid: "",
            workPlanName: "",
            workPlanType: 0,
            priority: 0,
            startTime: "",
            endTime: "",
            rate: 1,
            week: [],
            orderTypeUuid: "",
            assignUserUuid: "",
            timeList: [{ timeContent: "00:01:00" }]
          };
      this.showcom = false;
      this.operationstatus = "add"
    },
    edit(row,index) {
      planId(row.uuid).then(res => {
        let planDetail = res.data.data
        planDetail.week = planDetail.week.indexOf(",")==-1?planDetail.week.split():planDetail.week.split(',')
        this.formValidate.timeList = planDetail.times.map(item=>{
          return new Date(item.timeContent)
        })
        this.formValidate = {
          isEnable: planDetail.isEnable,
          siteUuid: planDetail.siteUuid,
          workPlanName: planDetail.workPlanName,
          workPlanType: planDetail.workPlanType,
          priority: planDetail.priority,
          startTime: new Date(planDetail.startTime),
          endTime: new Date(planDetail.endTime),
          rate: planDetail.rate,
          week:planDetail.week,
          orderTypeUuid: planDetail.orderTypeUuid,
          assignUserUuid: planDetail.assignUserUuid,
          timeList: planDetail.times,
          uuid:planDetail.uuid
        };
      
      });
      this.showcom = false;
      this.operationstatus = "edit"
    },
    addTime() {
      this.timeIndex++;
      this.formValidate.timeList.push({ timeContent: "00:01:00" });
      console.log(this.formValidate);
    },
    delTime(index) {
      if(this.formValidate.timeList.length>1){

        this.formValidate.timeList.splice(index, 1);
      }
    },
    handleSubmit(name) {
      this.$refs[name].validate(valid => {
        if (valid) {
          if(this.formValidate.startTime > this.formValidate.endTime){
            this.formValidate.endTime = ''
            this.$Message.info("结束时间应大于开始时间");
          }else{
          this.$Message.success("Success!");
          console.log(this.formValidate.timeList);
            this.formValidate.timeList.forEach(item=>{
              item.value = new Date(item.timeContent).getHours() +":"+new Date(item.timeContent).getMinutes()+":00"
            })
            this.formValidate.week = this.formValidate.week.join();
            this.formValidate.timeList = JSON.stringify(this.formValidate.timeList)
          if (this.operationstatus == "add") {
            planAdd(this.formValidate).then(res => {
              this.getformatdata({startPage:1,pageSize:10})
            });
          } else {
            planUpdate(this.formValidate).then(res => {
              this.getformatdata({startPage:1,pageSize:10})
            });
          }
          this.showcom = true;
        }
        } else {
          this.$Message.error("Fail!");
        }
      });
    },
    handleReset(name) {
      this.showcom = true;
      this.$refs[name].resetFields();
    },
    rateChange(value) {
      this.showWeek = value == 3 || value == 4 ? true : false;
      if (value == 1 || value == 3) {
        this.formValidate.timeList = [{ timeContent: "00:01:00" }];
      }
    },
    pageChange(startPage){
      this.getformatdata({startPage:startPage,pageSize:10})
    },
     getformatdata(data) {
       planList(data).then(res => {
         this.data = res.data.data.records;
         this.total = res.data.data.total;
        this.data.forEach(item => {
          item.priority = item.priority == 0 ? "低" : item.priority == 1 ? "中": "高"
          item.workPlanType = item.workPlanType == 0 ? "路线" : item.workPlanType == 1 ? "交接班": "审计"
          item.createTime = this.$util.formatTime(item.createTime);
          item.isEnable = item.isEnable == 0 ? "启用" : "禁用";
        });
       });
    },
  },
  
};
</script>
