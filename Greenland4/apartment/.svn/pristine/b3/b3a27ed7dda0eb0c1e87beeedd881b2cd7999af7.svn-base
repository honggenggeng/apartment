          }
        ],
        startTime: [
          {
            required: true,
            message: "开始日期为必填项",
            trigger: "change",
            type: "date"
          }
        ],
        endTime: [
          {
            required: true,
            message: "结束日期为必填项",
            trigger: "change",
            type: "date"
          }
        ],
        rate: [
          {
            required: true,
            message: "发送频率为必填项",
            trigger: "change",
            type: "number"
          }
        ],
        workPlanType: [
          {
            required: true,
            message: "工单类型为必填项",
            trigger: "change",
            type: "number"
          }
        ],
        assignUserUuid: [
          {
