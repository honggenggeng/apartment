            trigger: "change"
          }
        ],
        // week: [
        //   {
        //     required: true,
        //     message: "星期为必填项",
        //     trigger: "change",
        //     type: "array"
        //   }
        // ],
        siteUuid: [
          {
            required: true,
            message: "站点为必填项",
            trigger: "change"
          }
        ],
        route: [
          {
            required: true,
            message: "路线为必填项",
            trigger: "change"
          }
        ]
      },
      columns: [
        {
          type: "selection",
          width: 60,
          align: "center"
        },
        {
          title: "计划配置编号",
          key: "workPlanNum"
        },
        {
          title: "计划配置名称",
          key: "workPlanName"
        },
        {
          title: "优先级",
          key: "priority"
        },
        {
